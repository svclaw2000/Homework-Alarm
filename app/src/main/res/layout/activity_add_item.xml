<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".add_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새 과제"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#000"
            android:background="#ffff82"
            android:padding="10dp"
            android:layout_margin="15dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="제목" />

                    <EditText
                        android:id="@+id/editTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:inputType="none"
                        android:text=""
                        android:singleLine="true"
                        android:hint="(없음)"
                        android:nextFocusDown="@+id/editContent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="내용" />

                    <EditText
                        android:id="@+id/editContent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:inputType="none"
                        android:text=""
                        android:hint="(없음)"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="날짜" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:text="MM/DD" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="시간" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:text="HH:MM" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="알림\n시간" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@drawable/timebox"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:weightSum="4"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/hour1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:background="@drawable/timenotchosen"
                                android:text="1시간전" />

                            <TextView
                                android:id="@+id/hour2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:background="@drawable/timenotchosen"
                                android:text="2시간전" />

                            <TextView
                                android:id="@+id/hour3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:background="@drawable/timenotchosen"
                                android:text="3시간전" />

                            <TextView
                                android:id="@+id/hour6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:background="@drawable/timenotchosen"
                                android:text="6시간전" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:weightSum="4"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/hour9"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:background="@drawable/timenotchosen"
                                android:text="9시간전" />

                            <TextView
                                android:id="@+id/hour12"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:background="@drawable/timenotchosen"
                                android:text="12시간전" />

                            <TextView
                                android:id="@+id/hour24"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:background="@drawable/timenotchosen"
                                android:text="24시간전" />

                            <TextView
                                android:id="@+id/hour48"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:background="@drawable/timenotchosen"
                                android:text="48시간전" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/Bcancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginHorizontal="10dp"
                android:text="취소" />

            <TextView
                android:id="@+id/Bconfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginHorizontal="10dp"
                android:text="확인" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>